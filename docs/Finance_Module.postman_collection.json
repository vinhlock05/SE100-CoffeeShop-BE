              "mode": "raw",
              "raw": "{\n    \"notes\": \"Updated note only\",\n    \"transactionDate\": \"2025-12-15T10:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/finance/transactions/1",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "transactions", "1"]
