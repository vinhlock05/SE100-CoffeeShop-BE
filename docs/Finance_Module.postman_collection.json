        {
          "name": "Cancel Transaction",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/finance/transactions/1",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "transactions", "1"]
            }
          }
        },
