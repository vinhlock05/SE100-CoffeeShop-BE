{
  "info": {
    "name": "Finance Module - Sổ Quỹ",
    "description": "API Collection for Cash Book (Sổ Quỹ) module in SE100-CoffeeShop",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Get Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.metaData && response.metaData.tokens) {",
                  "    pm.environment.set('accessToken', response.metaData.tokens.accessToken);",
                  "    pm.collectionVariables.set('accessToken', response.metaData.tokens.accessToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/finance/transactions?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "transactions"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "search", "value": "", "disabled": true },
                { "key": "typeId", "value": "1", "disabled": true },
                { "key": "categoryIds", "value": "", "disabled": true },
                { "key": "paymentMethod", "value": "cash", "disabled": true },
                { "key": "status", "value": "completed", "disabled": true },
                { "key": "dateFrom", "value": "2025-12-01", "disabled": true },
                { "key": "dateTo", "value": "2025-12-31", "disabled": true }
              ]
            }
          }
        },
