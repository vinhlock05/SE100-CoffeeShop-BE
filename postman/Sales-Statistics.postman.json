                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"displayType\": \"chart\",\n  \"startDate\": \"2026-01-01\",\n  \"endDate\": \"2026-01-31\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/reports/financial",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "reports",
                                "financial"
                            ]
                        },
                        "description": "Returns data for charts (time series for revenue/cost/profit and aggregated metrics for cards)."
                    }
                }
            ]
        },
