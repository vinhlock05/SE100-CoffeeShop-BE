{
  "info": {
    "name": "CoffeeShop - Full API",
    "description": "Comprehensive API collection for CoffeeShop System. Includes Auth, Staff, Roles, and User Management.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.metaData && jsonData.metaData.accessToken) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.metaData.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.metaData.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Get Profile (Me)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/auth/me"
          }
        },
        {
          "name": "Change Username",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"new_username\"\n}"
            },
            "url": "{{baseUrl}}/auth/change-username"
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"123456\",\n  \"newPassword\": \"newpass123\"\n}"
            },
            "url": "{{baseUrl}}/auth/change-password"
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.metaData && jsonData.metaData.accessToken) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.metaData.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.metaData.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/auth/refresh-token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/auth/logout"
          }
        }
      ]
    },
    {
      "name": "2. Roles & Permissions",
      "item": [
        {
          "name": "Get All Roles",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/roles"
          }
        },
        {
          "name": "Get Permissions List",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/roles/permissions"
          }
        },
        {
          "name": "Create Role",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Role\",\n  \"description\": \"For testing\",\n  \"permissions\": [\"dashboard:view\"]\n}"
            },
            "url": "{{baseUrl}}/roles"
          }
        },
        {
          "name": "Update Role",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated desc\",\n  \"permissions\": [\"dashboard:view\", \"pos:access\"]\n}"
            },
            "url": "{{baseUrl}}/roles/1"
          }
        },
        {
          "name": "Delete Role",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/roles/1"
          }
        }
      ]
    },
    {
      "name": "3. Staff Management (HR)",
      "description": "Main module for managing employees, salaries, and their accounts.",
      "item": [
        {
          "name": "Create Staff (Full)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"NV002\",\n  \"fullName\": \"Nhân Viên Mới\",\n  \"phone\": \"0987654321\",\n  \"position\": \"Phục vụ\",\n  \"gender\": \"Nam\",\n  \"salaryType\": \"hourly\",\n  \"baseRate\": 20000,\n  \"username\": \"nhanvienmoi\",\n  \"password\": \"123456\",\n  \"roleId\": 2\n}"
            },
            "url": "{{baseUrl}}/staff"
          }
        },
        {
          "name": "Get All Staff",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff?page=1&limit=10&search=&status=active",
              "host": ["{{baseUrl}}"],
              "path": ["staff"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "search", "value": "" },
                { "key": "status", "value": "active" }
              ]
            }
          }
        },
        {
          "name": "Get Staff Detail",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/staff/1"
          }
        },
        {
          "name": "Update Staff Info & Salary",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Tên Đã Sửa\",\n  \"newSalaryType\": \"monthly\",\n  \"newBaseRate\": 7000000,\n  \"salaryEffectiveDate\": \"2024-02-01\"\n}"
            },
            "url": "{{baseUrl}}/staff/1"
          }
        },
        {
          "name": "Delete Staff (Soft)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/staff/1"
          }
        }
      ]
    },
    {
      "name": "4. System Users (Admin Only)",
      "description": "Backup module for managing system accounts directly. Use Staff Management for regular employees.",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/users"
          }
        },
        {
          "name": "Update User Status/Role",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"suspended\"\n}"
            },
            "url": "{{baseUrl}}/users/1"
          }
        }
      ]
    }
  ]
}
